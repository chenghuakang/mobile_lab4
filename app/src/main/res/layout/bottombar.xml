<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/buttomBar"
    android:orientation="vertical">


    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#B2EBF2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff">

            <Button
                android:id="@+id/buttom1"
                style="@style/buttomButton"
                android:drawableTop="@drawable/btn_1"
                android:onClick="page1"
                android:text="@string/bottomButton1" />

            <Button
                android:id="@+id/buttom2"
                style="@style/buttomButton"
                android:drawableTop="@drawable/btn_2"
                android:onClick="page2"
                android:text="@string/bottomButton2" />

            <Button
                android:id="@+id/buttom3"
                style="@style/buttomButton"
                android:drawableTop="@drawable/btn_4"
                android:onClick="page3"
                android:text="@string/bottomButton3" />
            <Button
                android:id="@+id/buttom4"
                style="@style/buttomButton"
                android:drawableTop="@drawable/btn_4"
                android:onClick="page4"
                android:text="@string/bottomButton4" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>